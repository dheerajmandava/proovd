{
  "lambdaFunction": {
    "permissions": {
      "storage": {
        "allowAccessToAllResources": true,
        "allowedGraphQlMutations": ["updateUserActivity"]
      }
    },
    "environmentVariables": {
      "MONGODB_URI": {
        "type": "parameter",
        "description": "MongoDB connection string"
      },
      "MONGODB_DB": {
        "type": "parameter",
        "description": "MongoDB database name"
      }
    }
  }
} 